generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Student{
  id String @id @default(uuid())
  name String 
  age String
  major String
  classroom Classroom[]
}

model Classroom{
  id String @id @default(uuid())
  name String
  student Student[]
  teacher Teacher[]
}

model Teacher{
  id String @id @default(uuid())
  name String
  classroom_id String
  classroom Classroom @relation(fields: [classroom_id],references: [id])
}